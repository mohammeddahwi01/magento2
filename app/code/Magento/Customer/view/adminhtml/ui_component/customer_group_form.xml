<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">customer_group_form.group_form_data_source</item>
        </item>
        <item name="label" translate="true" xsi:type="string">General Information</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="back">
                <url path="*/*/"/>
                <class>back</class>
                <label translate="true">Back</label>
            </button>
            <button class="Magento\Customer\Block\Adminhtml\Group\Edit\DeleteButton" name="delete"/>
            <button name="reset">
                <url path="*/*/*"/>
                <class>reset</class>
                <label translate="true">Reset</label>
            </button>
            <button name="save">
                <url path="*/*/save"/>
                <class>save primary</class>
                <label translate="true">Save Customer Group</label>
            </button>
            <button name="save_and_continue">
                <url path="*/*/save/back/1"/>
                <class>save</class>
                <label translate="true">Save and Continue Edit</label>
            </button>
        </buttons>
        <namespace>customer_group_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>customer_group_form.group_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="group_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="*/*/save"/>
        </settings>
        <dataProvider class="Magento\Customer\Model\Group\DataProvider" name="group_form_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>customer_group_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general">
        <settings>
            <label translate="true">Group Information</label>
        </settings>
        <field formElement="input" name="customer_group_code" sortOrder="20">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">Group</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Group Name</label>
                <notice translate="true">Maximum length must be less then 32 characters.</notice>
                <dataScope>customer_group_code</dataScope>
                <validation>
                    <rule name="max_text_length" xsi:type="string">32</rule>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="tax_class_id" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">Group</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Tax Class</label>
                <dataScope>tax_class_id</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Magento\Tax\Model\TaxClass\Source\Customer"/>
                    </settings>
                </select>
            </formElements>
        </field>

    </fieldset>
</form>